<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_move_form_with_edi">
            <field name="name">account.move.view_move_form_with_edi.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_resend810" id="bsiedi.account.move_resend810" string="Send via EDI" type="object" 
                        invisible="hide_resend_810_button" data-hotkey="" context="{}"/>
                </xpath>

                <xpath expr="//sheet/notebook" position="inside">
                    <page string="EDI Info" invisible="hide_edi_info">
                        <group>
                            <group>
                                <field name="edi_invoice_sent" invisible="hide_edi_info"/>
                                <field name="edi_invoice_senddatetime" invisible="hide_edi_info"/>
                                <field name="edi_invoice_ack" invisible="hide_edi_info"/>
                                <field name="edi_invoice_rej" invisible="hide_edi_info"/>
                                <field name="inv_send_requested" invisible="hide_edi_info"/>
                                <field name="hide_edi_info" invisible="1" />
                                <field name="hide_resend_810_button" invisible="1" />
                            </group>
                            <group>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
