<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="mail_template_sale_quote_followup_oel" model="mail.template">
      <field name="name">Sales: Quotation Follow-Up (OEL)</field>
      <field name="model_id" ref="sale.model_sale_order"/>
      <field name="subject">Following up on Quotation ${object.name} — ${object.company_id.name}</field>
      <field name="email_from">No Reply &lt;no-reply@oelsales.com&gt;</field>
      <field name="reply_to">no-reply@oelsales.com</field>
      <field name="email_to">${object.partner_id.email}</field>
      <field name="auto_delete" eval="True"/>
      <field name="body_html" type="html">
        <div style="margin:0; padding:0; font-family:Arial, Helvetica, sans-serif;">
          <table border="0" cellpadding="0" cellspacing="0" style="padding-top:16px; background-color:#F1F2F3; color:#454748; width:100%; border-collapse:separate;">
            <tr>
              <td align="center">
                <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding:16px; background-color:#ffffff; color:#111; border-collapse:separate; border-radius:6px;">
                  <tbody>
                    <tr>
                      <td style="font-size:14px; line-height:1.6;">
                        <h3 style="margin:0 0 8px 0; color:#875A7B; font-size:20px;">Quick Check‑In On Your Quote</h3>

                        <p style="margin:0 0 12px 0;">
                          Hey ${object.partner_id and object.partner_id.name or 'Customer'},
                        </p>

                        <p style="margin:0 0 12px 0;">
                          Just wanted to touch base on this quote #
                          <strong>${object.name}</strong> and make sure you didn't have any questions
                          or see if there is anything further I can support you on.
                        </p>

                        <div style="margin:18px 0; padding:12px; background:#F8FAFC; border:1px solid #E5E7EB; border-radius:6px;">
                          <div style="font-weight:600; margin-bottom:8px;">Quote Snapshot</div>
                          <div style="color:#374151;">
                            • Quote Number: ${object.name}<br/>
                            • Customer: ${object.partner_id and object.partner_id.name or '—'}<br/>
                            • Prepared By: ${object.user_id and object.user_id.name or 'Sales Team'}<br/>
                            • Date Issued: ${object.date_order and format_datetime(object.date_order, tz='UTC')[:10] or '—'}<br/>
                            • Valid Until: ${object.validity_date and object.validity_date.strftime('%Y-%m-%d') or '—'}
                          </div>
                        </div>

                        <p style="margin:0 0 12px 0;">
                          Feel free to let me know if there’s anything else you need – I’m happy to help
                          with product details, lead times, or next steps.
                        </p>

                        <p style="margin:0 0 18px 0;">
                          Thank you for considering OEL as your partner in electrical safety.
                        </p>

                        <hr style="border:none; border-top:1px solid #E5E7EB; margin:16px 0;"/>

                        <div style="color:#6B7280; font-size:12px;">
                          This email was sent from a no-reply address. Please do not reply to this message.
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>

                <div style="color:#6B7280; font-size:12px; margin-top:12px;">
                  <div>${object.company_id.name}</div>
                  <div>
                    <t t-esc="object.company_id.phone or ''"/> ·
                    <t t-esc="object.company_id.email or ''"/>
                  </div>
                  <div><t t-esc="object.company_id.website or ''"/></div>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </field>
    </record>

  </data>
</odoo>
