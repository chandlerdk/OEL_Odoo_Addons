<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="carrieraccountoverrides_view_form" model="ir.ui.view">
        <field name="name">bsiedi.carrieraccountoverrides.view.form</field>
        <field name="model">bsiedi.carrieraccountoverrides</field>
        <field name="priority">10</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form duplicate="True" edit="True">
                <sheet>
                    <group>
                        <group>
                          <field name="name"/>
                          <field name="trading_partner"/>
                          <field name="delivery_carrier"/>
                          <field name="carrier_account"/>
                        </group>
                    </group>
                </sheet>
              </form>
        </field>
    </record>
    <record id="view_carrieraccountoverrides_tree" model="ir.ui.view">
        <field name="name">bsiedi.carrieraccountoverrides.list</field>
        <field name="model">bsiedi.carrieraccountoverrides</field>
        <field name="priority">5</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree string="Carrier Account Overrides by Trading Partner" multi_edit="1" sample="1">
                <field name="name" readonly="1"/>
                <field name="trading_partner" string="Trading Partner"/>
                <field name="delivery_carrier" string="Delivery Method"/>
                <field name="carrier_account" string="Carrier Account"/>
            </tree>
        </field>
    </record>
    <record id="view_carrieraccountoverrides_search" model="ir.ui.view">
        <field name="name">bsiedi.carrieraccountoverrides.search</field>
        <field name="model">bsiedi.carrieraccountoverrides</field>
        <field name="priority">5</field>
        <field name="mode">primary</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <search string="Carrier Account Overrides">
                <field name="trading_partner"/>
                <separator/>
                <field name="delivery_carrier"/>
            </search>
        </field>
    </record>
</odoo>
