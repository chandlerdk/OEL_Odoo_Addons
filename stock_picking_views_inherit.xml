<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form_inherit_bsiedi_purchase">
            <field name="name">purchase.order.form.inherit.bsiedi_purchase</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="purch_ord_tags" widget="many2many_tags" options="{'color_field': 'color'}"
                      optional="hide"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_resend850" id="bsiedi.purchase.order.resend_850" string="Send via EDI" type="object" 
                        invisible="hide_850_resend_button" data-hotkey="" context="{}"/>
                </xpath>

                <xpath expr="//sheet/notebook" position="inside">
                    <page string="EDI Info" invisible="hide_edi_info" >
                        <group>
                            <group>
                                <field name="edi_orig_send_date" invisible="hide_850_info" />
                                <field name="edi_chg_send_date" invisible="hide_850_info" />
                                <field name="hide_edi_info" invisible="1"/>
                                <field name="hide_850_info" invisible="1"/>
                                <field name="hide_850_resend_button" invisible="1"/>
                            </group>
                            <group>
                                <field name="edi_order_ack" invisible="hide_edi_info" />
                                <field name="edi_order_rej" invisible="hide_edi_info" />
                                <field name="po_send_requested" invisible="hide_850_info" />
                                <field name="edi_purch_order_sent" invisible="hide_850_info" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
