<odoo>
    <record id="partner_view_message" model="ir.ui.view">
        <field name="name">partner.message.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="calendar.view_partners_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_show_related_chatter" string="Messages" type="object"
                icon="fa-comment-o" class="oe_stat_button"/>
            </xpath>
        </field>
    </record>
</odoo>