<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_order_form_inherit_bsiedi_sale">
            <field name="name">sale.order.form.inherit.bsiedi_sale</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="edi_order" invisible="hide_edi_info"/>
                </xpath>

                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_resend940" id="bsiedi.sale.order.resend_940" string="Send to Warehouse" type="object" 
                        invisible="hide_940_send_button" data-hotkey="" context="{}"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="before">
                    <button name="action_resend855" id="bsiedi.sale.order.resend_855" string="Send EDI Acknowledgement" type="object" 
                        invisible="hide_855_send_button" data-hotkey="" context="{}"/>
                </xpath>
                
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="EDI Info" invisible="hide_edi_info and hide_940_info" >
                        <group>
                            <group invisible="hide_edi_info">
                                <field name="alt_oe_po_no" invisible="hide_edi_info" />
                                <field name="alt_oe_po_no2" invisible="hide_edi_info" />
                                <field name="dealer_order_number" invisible="hide_edi_info" />
                                <field name="isa_control_number" invisible="hide_edi_info" />
                                <field name="gs_control_number" invisible="hide_edi_info" />
                                <field name="st_control_number" invisible="hide_edi_info" />
                                <field name="hide_edi_info" invisible="True"/>
                                <field name="hide_940_info" invisible="True"/>
                                <field name="hide_855_info" invisible="True"/>
                                <field name="hide_940_send_button" invisible="True"/>
                                <field name="hide_855_send_button" invisible="True"/>
                            </group>
                            <group>
                                <field name="orig_ship_via_cd" invisible="hide_edi_info" />
                                <field name="edi_order_reject" invisible="hide_855_info" />
                                <field name="edi_acknowledgement_sent" invisible="hide_855_info" />
                                <field name="ack_send_requested" invisible="hide_855_info" />
                                <field name="edi_warehouseorder_sent" invisible="hide_940_info" />
                                <field name="edi_warehouseshipmentconf_received" invisible="hide_940_info" />
                                <field name="whsord_send_requested" invisible="hide_940_info" />
                            </group>
                        </group>
                    </page>
                </xpath>

                <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                    <field name="orig_qty" optional="hide" readonly="True"/>
                    <field name="orig_uom" optional="hide" readonly="True"/>
                    <field name="orig_ship_date" optional="hide" readonly="True"/>
                    <field name="cus_item_no" optional="show" />
                    <field name="upc_code" optional="hide" />
                    <field name="gtin_14" optional="hide" />
                    <field name="edi_line_reject" optional="hide" />
                    <field name="resched_ship_date" optional="hide" />
                    <field name="mark_for_partner_id" optional="hide" />
                    <field name="kanban" optional="hide" />
                    <field name="line_po" optional="hide" />
                    <field name="line_feed_loc" optional="hide" />
                </xpath>

            </field>
        </record>
    </data>
</odoo>
