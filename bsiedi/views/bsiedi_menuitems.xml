<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="action_list_itemxref">
        <field name="name">Item Cross-Reference</field>
        <field name="res_model">bsiedi.itemxref</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first item cross-reference</p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_list_tradingpartner">
        <field name="name">Trading Partners</field>
        <field name="res_model">bsiedi.tradingpartner</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first trading partner</p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_list_shiptoxref">
        <field name="name">Ship-to Cross-Reference</field>
        <field name="res_model">bsiedi.shiptoxref</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first ship-to cross-reference</p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_list_releaseapproval">
        <field name="name">Releases for Approval</field>
        <field name="res_model">bsiedi.releaseapproval</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first release for approval</p>
        </field>
    </record>

        <record model="ir.actions.act_window" id="action_list_warehousetpcodes">
        <field name="name">Warehouse Codes by Trading Partner</field>
        <field name="res_model">bsiedi.warehousetpcodes</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first warehouse code</p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_list_carrieraccountoverrides">
        <field name="name">Carrier Account Overrides by Trading Partner</field>
        <field name="res_model">bsiedi.carrieraccountoverrides</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first carrier account override</p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_bsiedi_config_settings">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'bsiedi'}</field>
    </record>
    <record id="product_normal_action_purch" model="ir.actions.act_window">
        <field name="name">Product Variants</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="context">{"search_default_filter_to_buy":1}</field>
        <field name="view_id" ref="product.product_product_tree_view"/>
        <field name="search_view_id" ref="product.product_search_form_view"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new product variant
          </p><p>
            You must define a product for everything you buy, whether it's a physical product,
            a consumable or a service you offer to customers.
            The product form contains information to simplify the buying process:
            price, accounting data, procurement methods, etc.
          </p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_list_inbshipviaxref">
        <field name="name">Inbound Ship-Via Cross-Reference</field>
        <field name="res_model">bsiedi.inbshipviaxref</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first inbound ship-via cross-reference</p>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_list_outbshipviaxref">
        <field name="name">Outbound Ship-Via Cross-Reference</field>
        <field name="res_model">bsiedi.outbshipviaxref</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first outbound ship-via cross-reference</p>
        </field>
    </record>
    
    <menuitem id="menu_bsiedi" name="BSI EDI" sequence="1" web_icon="bsiedi,static/description/icon.png">
        <menuitem id="menu_bsiedi_tp" name="Trading Partner" sequence="10">
            <menuitem id="menu_tradingpartner" name="Trading Partner" sequence="2" action="action_list_tradingpartner"/>
        </menuitem>
        <menuitem id="menu_bsiedi_sales" name="Sales" sequence="20">
            <menuitem id="menu_sale_quotations" action="sale.action_quotations_with_onboarding" groups="sales_team.group_sale_salesman" sequence="2"/>
            <menuitem id="menu_sale_order" name="Orders" action="sale.action_orders" groups="sales_team.group_sale_salesman" sequence="3"/>
            <menuitem id="menu_cust" name="Customers" sequence="4" action="account.res_partner_action_customer" />
            <menuitem id="menu_carrieraccountoverrides" action="action_list_carrieraccountoverrides" />
            <menuitem id="menu_itemxrefcust" name="Item Cross-Reference" sequence="5" action="action_list_itemxref"/>
            <menuitem id="menu_productscust" action="product.product_normal_action_sell" groups="product.group_product_variant" sequence="6"/>
            <menuitem id="menu_releaseapproval" action="action_list_releaseapproval" sequence="7"/>
            <menuitem id="menu_warehousetpcodes" action="action_list_warehousetpcodes" sequence="8"/>
        </menuitem>
        <menuitem id="menu_bsiedi_purchase" name="Purchase" sequence="30">
            <menuitem id="menu_purchrfq" name="Requests for Quotation" sequence="1" action="purchase.purchase_rfq"/>
            <menuitem id="menu_purchord" name="Purchase Orders" sequence="2" action="purchase.purchase_form_action"/>
            <menuitem id="menu_vend" name="Vendors" sequence="3" action="account.res_partner_action_supplier" />
            <menuitem id="menu_itemxrefpurch" name="Item Cross-Reference" sequence="4" action="action_list_itemxref"/>
            <menuitem id="menu_productspurch" action="product_normal_action_purch" groups="product.group_product_variant" sequence="5"/>
        </menuitem>
        <menuitem id="menu_shipping" name="Shipping" sequence="40">
            <menuitem id="menu_inbshipviaxref" name="Inbound Ship-Via Cross-Reference" sequence="10" action="action_list_inbshipviaxref"/>
            <menuitem id="menu_outbshipviaxref" name="Outbound Ship-Via Cross-Reference" sequence="20" action="action_list_outbshipviaxref"/>
        </menuitem>
        <menuitem id="menu_bsiedi_config" name="Configuration" sequence="50">
            <menuitem id="menu_settings" name="Settings" sequence="3" action="action_bsiedi_config_settings"/>
        </menuitem>
    </menuitem>
</odoo>