<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tradingpartner_view_form" model="ir.ui.view">
        <field name="name">bsiedi.tradingpartner.view.form</field>
        <field name="model">bsiedi.tradingpartner</field>
        <field name="priority">10</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form duplicate="True" edit="True">
                <sheet>
                    <group>
                        <group>
                          <field name="name"/>
                          <field name="trading_partner_id"/>
                          <field name="trading_partner_name"/>
                        </group>
                    </group>
                            <notebook>
                                <page string="Customer">
                                    <group>
                                        <group>
                                          <field name="requires_compliant_labels"/>
                                          <field name="requires_edi_asn"/>
                                          <field name="requires_edi_inv"/>
                                          <field name="requires_edi_ack"/>
                                          <field name="requires_edi_invstat"/>
                                        </group>
                                        <group>
                                          <field name="requires_edi_cmemo"/>
                                          <field name="requires_edi_routereq"/>
                                          <field name="inv_feed_locs" widget="many2many_tags"/>
                                          <field name="inv_feed_intransit_locs" widget="many2many_tags"/>
                                        </group>
                                    </group>
                            </page>
                                <page string="Supplier">
                                    <group>
                                        <group>
                                          <field name="requires_edi_po"/>
                                        </group>
                                        <group>
                                        </group>
                                    </group>
                            </page>
                                <page string="Third Party Logistics">
                                    <group>
                                        <group>
                                          <field name="requires_edi_whsord"/>
                                        </group>
                                        <group>
                                          <field name="whsord_locs" widget="many2many_tags"/>
                                          <field name="whsord_locs_autosend" widget="many2many_tags"/>
                                        </group>
                                    </group>
                            </page>
                            </notebook>
                </sheet>
              </form>
        </field>
    </record>
    <record id="view_tradingpartner_tree" model="ir.ui.view">
        <field name="name">bsiedi.tradingpartner.list</field>
        <field name="model">bsiedi.tradingpartner</field>
        <field name="priority">5</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree string="Trading Partners" multi_edit="1" sample="1">
                <field name="name" readonly="1"/>
                <field name="trading_partner_id" string="Trading Partner Id"/>
                <field name="trading_partner_name" string="Trading Partner Name"/>
            </tree>
        </field>
    </record>
    <record id="view_tradingpartner_search" model="ir.ui.view">
        <field name="name">bsiedi.tradingpartner.search</field>
        <field name="model">bsiedi.tradingpartner</field>
        <field name="priority">5</field>
        <field name="mode">primary</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <search string="Cross References">
                <field name="trading_partner_name"/>
                <separator/>
                <field name="trading_partner_id"/>
            </search>
        </field>
    </record>
</odoo>
