<odoo>
    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="name">sale_order_view_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="sale_rep_id"/>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="string">Inside Salesperson</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <xpath expr="//field[@name='team_id']" position="move"/>
            </xpath>

            <xpath expr="//field[@name='sale_rep_id']" position="attributes">
                <attribute name="string">Manu. Rep</attribute>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="options">{"no_create":true,"no_open":true}</attribute>
                <attribute name="readonly">False</attribute>
                <attribute name="string">Outside Salesperson</attribute>
            </xpath>
        </field>
    </record>


    <record id="sale_order_view_search_inherit_quotation" model="ir.ui.view">
        <field name="name">sale_order_view_search_inherit_quotation</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_quotation']" position="after">
                <field name="sale_rep_id"/>
            </xpath>
        </field>
    </record>

</odoo>