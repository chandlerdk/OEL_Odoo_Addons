<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.bsiedi</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="22"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app name="bsiedi" data-string="BSI EDI" string="BSI EDI" logo="/bsiedi/static/description/icon.png" groups="bsiedi.group_edi_admin">
                    <block title="Company Settings" name="bsiedi_company_setting_container" invisible="not is_root_company">
                        <setting company_dependent="1" documentation="">
                            <label for="gln" string="Global Location Number (GLN)" class="col-2 o_light_label"/>
                            <field name="gln"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="duns_number" string="Duns Number" class="col-2 o_light_label"/>
                            <field name="duns_number"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="ucc_company_code" string="UCC Company Code" class="col-2 o_light_label"/>
                            <field name="ucc_company_code"/>
                        </setting>
                    </block>
                    <block title="Chatter Integration" name="bsiedi_chatterinteg_setting_container" invisible="not is_root_company">
                        <setting company_dependent="1" documentation="">
                            <label for="add_viewlinks_chatter" string="Add EDI Viewing Links to Chatter?" class="col-2 o_light_label"/>
                            <field name="add_viewlinks_chatter"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="add_trxupds_chatter" string="Add EDI Updates from Transactions to Chatter?" class="col-2 o_light_label"/>
                            <field name="add_trxupds_chatter"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="add_edierrors_chatter" string="Add EDI Errors to Chatter?" class="col-2 o_light_label"/>
                            <field name="add_edierrors_chatter"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="add_ediack_chatter" string="Add EDI Acknowledgements to Chatter?" class="col-2 o_light_label"/>
                            <field name="add_ediack_chatter"/>
                        </setting>
                    </block>
                    <block title="Inventory Feed Settings" name="bsiedi_invfeedset_setting_container" invisible="not is_root_company">
                        <setting company_dependent="1" documentation="">
                            <label for="inv_feed_locs" string="Warehouse Locations for EDI Inventory Feed" class="col-2 o_light_label"/>
                            <field name="inv_feed_locs" widget="many2many_tags"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="inv_feed_intransit_locs" string="Stock In-Transit Locations for EDI Inventory Feed" class="col-2 o_light_label"/>
                            <field name="inv_feed_intransit_locs" widget="many2many_tags"/>
                        </setting>
                    </block>
                    <block title="Sales Order/Quotation Creation" name="bsiedi_slsordcreate_setting_container" invisible="not is_root_company">
                        <setting company_dependent="1" documentation="">
                            <label for="sales_ord_tags" string="Sales order tags to apply for EDI"/>
                            <field name="sales_ord_tags" widget="many2many_tags"/>
                        </setting>
                    </block>
                    <block title="Purchase Orders" name="bsiedi_purchord_setting_container" invisible="not is_root_company">
                        <setting company_dependent="1" documentation="">
                            <label for="purch_ord_tags" string="Purchase order tags to select for EDI"/>
                            <field name="purch_ord_tags" widget="many2many_tags"/>
                        </setting>
                    </block>
                    <block title="Outbound Invoicing" name="bsiedi_outbinvline_setting_container" invisible="not is_root_company">
                        <setting company_dependent="1" documentation="">
                            <label for="invoice_line_accounts" string="Outbound Invoice Sales Line Accounts"/>
                            <field name="invoice_line_accounts" widget="many2many_tags"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="freight_line_accounts" string="Outbound Invoice Freight Accounts"/>
                            <field name="freight_line_accounts" widget="many2many_tags"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="misc_line_accounts" string="Outbound Invoice Miscellaneous Charge Accounts"/>
                            <field name="misc_line_accounts" widget="many2many_tags"/>
                        </setting>
                        <setting company_dependent="1" documentation="">
                            <label for="tax_line_accounts" string="Outbound Invoice Tax Accounts"/>
                            <field name="tax_line_accounts" widget="many2many_tags"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context" eval="{'module': 'general_settings', 'bin_size': False}"/>
    </record>

    <record id="configuration_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'bsiedi', 'bin_size': False}</field>
    </record>


</odoo>