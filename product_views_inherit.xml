<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_releaseapproval_tree" model="ir.ui.view">
        <field name="name">bsiedi.releaseapproval.list</field>
        <field name="model">bsiedi.releaseapproval</field>
        <field name="priority">5</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree string="Releases for Review" multi_edit="1" sample="1" create="1" editable="top">
                <header>
                </header>
                <field name="name" readonly="1"/>
                <field name="disposition" string="Disposition"/>
                <field name="ready" string="Ready to Process?"/>
                <field name="trading_partner_id" string="Trading Partner" readonly="1" optional="show" />
                <field name="partner_id" string="Customer" readonly="1" optional="show" />
                <field name="deliv_partner_id" string="Delivery To" readonly="1" optional="show" />
                <field name="product_id" readonly="1"/>

                <field name="release_quantity" string="Release Quantity" required="1"/>
                <field name="release_date" string="Release Date"/>
                
                <field name="po_number" string="Purchase Order Number" required="1" readonly="1" optional="show" />
                <field name="release_number" string="Release Number" required="1" readonly="1" optional="show" />
                <field name="kanban_number" string="Kanban Number" required="1" readonly="1" optional="show" />

                <field name="isa_number" string="EDI ISA Control Number" required="1" readonly="1" optional="hide" />
                <field name="gs_number" string="EDI GS Control Number" required="1" readonly="1" optional="hide" />
                <field name="trx_date" string="EDI Transaction Date" required="1" readonly="1" optional="hide" />
                <field name="state" string="State" readonly="1" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="view_releaseapproval_search" model="ir.ui.view">
        <field name="name">bsiedi.releaseapproval.search</field>
        <field name="model">bsiedi.releaseapproval</field>
        <field name="priority">5</field>
        <field name="mode">primary</field>
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <search string="Releases for Review">
                <field name="po_number"/>
                <field name="release_number"/>
                <field name="kanban_number"/>
                <separator/>
                <field name="release_date"/>
                <field name="disposition"/>
                <field name="state"/>
                <field name="ready"/>
                <separator/>
                <field name="product_id"/>
                <field name="trading_partner_id"/>
                <field name="partner_id"/>
                <field name="deliv_partner_id"/>
                <separator/>
                <field name="isa_number"/>
                <field name="gs_number"/>
                <field name="trx_date"/>
                <filter name="groupby_releasedate" string="Release Date" context="{'group_by':'release_date'}"/>
                <filter name="groupby_partner_id" string="Customer" context="{'group_by':'partner_id'}"/>
                <filter name="groupby_deliv_partner_id" string="Deliver To" context="{'group_by':'deliv_partner_id'}"/>
                <filter name="groupby_product_id" string="Product" context="{'group_by':'product_id'}"/>
            </search>
        </field>
    </record>
</odoo>
