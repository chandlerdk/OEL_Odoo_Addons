<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="complete_order"/>
            </field>
        </field>
    </record>

    <record id="view_sale_order_filter_inherit" model="ir.ui.view">
        <field name="name">sale.order.list.select</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_sale_orders_filter']" position="after">
                <filter string="complete Orders" name="completed_order"
                domain="[('complete_order', '=', True)]"/>

                <filter string="Incomplete Orders" name="completed_order"
                domain="[('complete_order', '=', False)]"/>
            </xpath>
        </field>
    </record>

      <record id="view_order_product_search_inherit" model="ir.ui.view">
        <field name="name">sale.report.search.inherit</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="complete_order" string="Complete Order"/>
                <filter string="Complete Order" name="custom_filter" domain="[('complete_order', '=', True)]"/>
                <filter string="Incomplete Order" name="custom_filter" domain="[('complete_order', '=', False)]"/>
            </xpath>
        </field>
    </record>
</odoo>