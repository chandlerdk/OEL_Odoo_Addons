<odoo>

     <record id="view_backorder_report_tree" model="ir.ui.view">
        <field name="name">back.order.report.tree</field>
        <field name="model">back.order.report</field>
        <field name="arch" type="xml">
            <tree string="Back Order Report">
                <header>
                   <button name="refresh_back_order_report" string="Refresh" type="object" class="btn-primary ms-1" display="always"/>
               </header>
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="sale_id"/>
                <field name="qty"/>
                <field name="sale_price"/>
            </tree>
        </field>
    </record>

   <record id="view_inventory_backorder_search" model="ir.ui.view">
        <field name="name">back.order.report.search</field>
        <field name="model">back.order.report</field>
        <field name="arch" type="xml">
            <search string="Back Order Search">

                <!-- Add groupby options -->
                <group expand="1" string="Group By">
                    <filter name="group_by_partner" string="Customer" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_product" string="Product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
   </record>

     <record id="inventory_backorder_report_action" model="ir.actions.act_window">
        <field name="name">Back Order Report</field>
        <field name="res_model">back.order.report</field>
        <field name="view_mode">tree</field>
         <field name="context">{'create': 0}</field>
        <field name="view_id" ref="view_backorder_report_tree"/>
     </record>

    <menuitem id="menu_bacnkorder_report"
              name="Back Order Report"
              parent="stock.menu_warehouse_report"
              sequence="200"
              action="inventory_backorder_report_action"/>
</odoo>