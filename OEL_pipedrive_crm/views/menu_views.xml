<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root App Menu -->
    <menuitem id="menu_oel_saleshub_root"
              name="OEL Sales Hub"
              sequence="10"
              web_icon="OEL_pipedrive_crm,static/description/icon.png"/>

    <!-- Orders (Parent Menu) - FIRST -->
    <menuitem id="menu_oel_orders_root"
              name="Orders"
	      parent="menu_oel_saleshub_root"
	      action="action_oel_my_quotes"
              sequence="10"/>

    <!-- Quotes (submenu under Orders) -->
    <menuitem id="menu_oel_quotes"
              name="Quotes"
              parent="menu_oel_orders_root"
              action="action_oel_my_quotes"
              sequence="10"/>

    <!-- Orders (submenu under Orders) -->
    <menuitem id="menu_oel_orders"
              name="Orders"
              parent="menu_oel_orders_root"
              action="action_oel_orders"
              sequence="20"/>

    <!-- Acquisition - SECOND -->
    <menuitem id="menu_oel_acquisition"
              name="Acquisition"
              parent="menu_oel_saleshub_root"
              sequence="20"/>

    <!-- a) Prospects -->
    <menuitem id="menu_oel_prospects"
              name="Prospects"
              parent="menu_oel_acquisition"
              action="action_oel_crm_prospects"
              sequence="5"/>

    <!-- b) Active Prospects (CONTACTS with opportunities) -->
    <menuitem id="menu_oel_active_prospects"
              name="Active Prospects"
              parent="menu_oel_acquisition"
              action="action_oel_crm_active_prospects"
              sequence="7"/>

    <!-- c) Customers -->
    <menuitem id="menu_oel_customers"
              name="Customers"
              parent="menu_oel_acquisition"
              action="action_oel_crm_customers"
              sequence="10"/>

    <!-- d) Leads -->
    <menuitem id="menu_oel_leads"
              name="Leads"
              parent="menu_oel_acquisition"
              action="action_oel_crm_leads"
              sequence="20"/>

    <!-- My Activities - THIRD -->
    <menuitem id="menu_oel_my_activities"
              name="My Activities"
              parent="menu_oel_saleshub_root"
              action="action_oel_my_activities"
              sequence="30"/>

    <!-- Activities Calendar - FOURTH -->
    <menuitem id="menu_oel_activities_calendar"
              name="Calendar"
              parent="menu_oel_saleshub_root"
              action="action_oel_my_activities_calendar"
              sequence="40"/>

    <!-- Contacts - FIFTH -->
    <menuitem id="menu_oel_contacts_root"
              name="Contacts"
              parent="menu_oel_saleshub_root"
              sequence="50"/>

    <menuitem id="menu_oel_contacts_all"
              name="Contacts"
              parent="menu_oel_contacts_root"
              action="action_oel_contacts_all"
              sequence="10"/>

    <menuitem id="menu_oel_companies"
              name="Companies"
              parent="menu_oel_contacts_root"
              action="action_oel_companies"
              sequence="20"/>

    <!-- Reporting - SIXTH (LAST) -->
    <menuitem id="menu_oel_reporting"
              name="Reporting"
              parent="menu_oel_saleshub_root"
              sequence="60"/>

    <!-- Dashboards submenu under Reporting -->
    <menuitem id="menu_oel_dashboards"
              name="Dashboards"
              parent="menu_oel_reporting"
              action="spreadsheet_dashboard.ir_actions_dashboard_action"
              sequence="10"/>

    <!-- Sales Analysis submenu under Reporting -->
    <menuitem id="menu_oel_sales_analysis"
              name="Sales Analysis"
              parent="menu_oel_reporting"
              action="sale.action_order_report_all"
              sequence="20"/>
</odoo>
