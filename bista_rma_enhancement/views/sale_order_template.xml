<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_delivery_note" model="ir.ui.view">
        <field name="name">sale_order_view_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field colspan="2" name="note" nolabel="1" position="after">
                <field  colspan="2" name="delivery_note" placeholder="Delivery Note..."/>
                <field  colspan="2" name="internal_delivery_note" placeholder="Internal Delivery Note..."/>

            </field>
        </field>
    </record>

</odoo>